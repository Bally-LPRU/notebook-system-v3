rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Equipment images - simplified rules for admin access
    match /equipment-images/{allPaths=**} {
      // Read: authenticated users
      allow read: if request.auth != null;
      
      // Write: admin users only
      allow write: if request.auth != null && 
                      isAdmin() &&
                      isValidImageFile();
    }
    
    // QR Code images for equipment
    match /qr-codes/{equipmentId} {
      // Read: approved users only
      allow read: if request.auth != null && 
                     isApprovedUser();
      
      // Write: admin users only
      allow write: if request.auth != null && 
                      isAdmin() &&
                      request.resource.contentType == 'image/png' &&
                      request.resource.size < 1024 * 1024; // 1MB limit for QR codes
    }
    
    // Label templates and generated labels
    match /labels/{equipmentId}/{fileName} {
      // Read: approved users only
      allow read: if request.auth != null && 
                     isApprovedUser();
      
      // Write: admin users only
      allow write: if request.auth != null && 
                      isAdmin() &&
                      request.resource.contentType in ['application/pdf', 'image/png'] &&
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit for labels
    }
  }
}

// Helper functions
function isAdmin() {
  let userData = firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
  return userData.role == 'admin';
}

function isApprovedUser() {
  let userData = firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
  // Admin users don't need approval status check
  return userData.role == 'admin' || userData.status == 'approved';
}

function isValidImageFile() {
  return request.resource.contentType.matches('image/.*') &&
         request.resource.size < 5 * 1024 * 1024; // 5MB limit
}
